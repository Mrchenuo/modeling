{
    "name": "Detection",
    "n_gpu": 1,

    "arch": {
        "type": "Net2",
        "args": {
        }
    },
    "data_loader": {
        "type": "RIDataLoader",
        "args":{
            "train_data_path":
                "D:/GitHub/modeling/D/data/train.xlsx"
            ,
            "test_data_path":
                "D:/GitHub/modeling/D/data/train.xlsx"
            ,
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.2,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "param_group": true,
        "args":{
            "lr": 0.01,
            "weight_decay": 0.001,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "log_rmse"
    ],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 64
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 20,

        "tensorboard": true
    }
}
